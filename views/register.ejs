   function isValidEmail(email) {
    if (typeof email !== 'string') {
        alert('Invalid input: Email must be a string.');
        return false;
    }
    
    const atIndex = email.indexOf('@');
    const dotIndex = email.indexOf('.', atIndex);

    if (atIndex === -1) {
        alert('Invalid email: Missing @ symbol.');
        return false;
    }

    if (/^[^a-zA-Z]/.test(email)) {
        alert('Invalid email: Email should not start with a number or special character.');
        return false;
    }
    
    if (atIndex === 0) {
        alert('Invalid email: @ symbol is at the beginning.');
        return false;
    }
    
    if (dotIndex === -1) {
        alert('Invalid email: Missing dot after @ symbol.');
        return false;
    }
    
    if (dotIndex <= atIndex + 1) {
        alert('Invalid email: Dot is immediately after @ symbol.');
        return false;
    }
    
    if (dotIndex >= email.length - 1) {
        alert('Invalid email: Dot is at the end of the email.');
        return false;
    }

    return true;
}

